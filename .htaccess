<IfModule mod_rewrite.c>
	RewriteEngine On

	#If the required file is not index.php but does exist, do not rewrite
	RewriteCond $1 !^(index\.php)
	RewriteCond %{REQUEST_FILENAME} -f
	RewriteRule ^(.*)$ $1 [L]

	#Else, if index.php is not RewriteCond add it to the url
	RewriteCond $1 !^(index\.php)
	RewriteRule ^(.*)$ /index.php/$1 [L]
</IfModule>
